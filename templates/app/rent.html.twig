{% extends "base.html.twig" %}

{% block title %}Réserver votre chambre
{% endblock %}

{% block body %}

	<div id="carouselExampleCaptions" class="carousel slide">
		<div class="carousel-indicators">
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
		</div>
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="{{ asset("assets/img/carouselroom1.jpg") }}" class="d-block w-100" style="height:680px;" alt="...">
				<div class="carousel-caption d-none d-md-block">
					<a href="#1" class="h1 text-transform btn btn-light btn-lg p-3 rounded">Boutique</a>
					<h5 class="h1">Notre nouvelle collection</h5>
					<p class="h3">Découvrez maintenant notre collection été/printemps</p>
				</div>
			</div>
			<div class="carousel-item">
				<img src="{{ asset("assets/img/carouselroom2.jpg") }}" class="d-block w-100" style="height:680px;" alt="...">
				<div class="carousel-caption d-none d-md-block">
					<a href="#1" class="h1 text-transform btn btn-light btn-lg p-3 rounded">Boutique</a>
					<h5 class="h1">Nos accessoires</h5>
					<p class="h3">Ayez vos accessoires pour cet été!</p>
				</div>
			</div>
			<div class="carousel-item">
				<img src="{{ asset("assets/img/carouselroom3.jpg") }}" class="d-block w-100" style="height:680px;" alt="...">
				<div class="carousel-caption d-none d-md-block">
					<a href="#1" class="h1 text-transform btn btn-light btn-lg p-3 rounded">Boutique</a>
					<h5 class="h1">Collection Vacances</h5>
					<p class="h3">Soyez prête pour cet été !</p>
				</div>
			</div>
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>

	<div class="container">
		<h2>Equipement et informations</h2>
		<p class="mt-3">{{chambre.descriptionLongue|striptags }}</p>
		<h2 class="text-center text-primary my-5">Réserver dès maintenant</h2>
		{{ form_start(form, {
        novalidate: 'novalidate'
    }) }}

		{{ form_row(form.date_arrive)}}
		{{ form_row(form.date_depart)}}
		{{ form_row(form.prenom)}}
		{{ form_row(form.nom)}}
		{{ form_row(form.telephone)}}
		{{ form_row(form.email)}}

		<input type="submit" value="Envoyer" class="btn btn-primary w-100">
		{{ form_end(form) }}


	</div>

{% endblock %}
