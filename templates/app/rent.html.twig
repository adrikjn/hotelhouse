{% extends "base.html.twig" %}

{% block title %}Réserver votre chambre
{% endblock %}

{% block body %}

	<div id="carouselExampleCaptions" class="carousel slide">
		<div class="carousel-indicators">
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
			<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
		</div>
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="{{ asset("assets/img/carouselroom1.jpg") }}" class="d-block w-100" style="height:400px; object-fit:cover;" alt="...">
			</div>
			<div class="carousel-item">
				<img src="{{ asset("assets/img/carouselroom2.jpg") }}" class="d-block w-100" style="height:400px; object-fit:cover;" alt="...">
			</div>
			<div class="carousel-item">
				<img src="{{ asset("assets/img/carouselroom3.jpg") }}" class="d-block w-100" style="height:400px; object-fit:cover;" alt="...">

			</div>
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>

	<div class="container mt-5">
		<h2>Equipement et informations</h2>
		<p class="mt-3">{{chambre.descriptionLongue|striptags }}</p>
		<h2 class="text-center text-primary my-4">Réserver dès maintenant</h2>
		<h3 class="mb-3 text-uppercase">{{chambre.titre}}</h3>
		{{ form_start(form, {
    novalidate: 'novalidate'
}) }}

		<div class="row">
			<div class="col-6">
				{{ form_row(form.date_arrive) }}
			</div>
			<div class="col-6">
				{{ form_row(form.date_depart) }}
			</div>
		</div>

		<div class="row">
			<div class="col-6  mb-5">
				<small>La
					{{ chambre.titre }}
					est au prix de <span class="text-danger">{{ chambre.prixJournalier }}€</span>
					 par nuit</small>
			</div>
		</div>

		<div class="row">
			<div class="col-6">
				{{ form_row(form.prenom) }}
			</div>
			<div class="col-6">
				{{ form_row(form.nom) }}
			</div>
		</div>

		<div class="row">
			<div class="col-6">
				{{ form_row(form.telephone) }}
			</div>
			<div class="col-6">
				{{ form_row(form.email) }}
			</div>
		</div>

		<input type="submit" value="Envoyer" class="btn btn-primary w-100 mb-5">
		{{ form_end(form) }}


	</div>

{% endblock %}
