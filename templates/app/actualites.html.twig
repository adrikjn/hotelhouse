{% extends "base.html.twig" %}

{% block title %}Actualités
{% endblock %}
{% block body %}
	<div class="container">
		<h1 class="border-bottom py-2 text-center my-4" style="color:#B8860B">Actualités</h1>

		<div class="row">
			{% for article in articles %}
				<div class="col-md-4">
					<div class="card my-3">
						<img src="{{ article.urlToImage }}" class="card-img-top rounded" alt="Image non disponible">
						<div class="card-body">
							<h5 class="card-title">{{ article.title }}</h5>
							<p class="card-text">{{ article.description }}</p>
						</div>
						<ul class="list-group list-group-flush">
							<li class="list-group-item">
								<strong>Auteur:</strong>
								{% if article.author %}
									{{ article.author }}
								{% else %}
									Auteur inconnu
								{% endif %}
							</li>
							<li class="list-group-item">
								<strong>Date de publication:</strong>
								{{ article.publishedAt }}
							</li>
						</ul>
						<div class="card-body">
							<a href="{{ article.url }}" class="btn btn-css">Lire l'article entier</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
