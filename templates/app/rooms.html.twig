{% endblock %}

{% block body %}
    <h1 class="text-center mt-3 text-dark text-uppercase">Nos chambres</h1>
	<div class="container">
		{% for room in rooms %}
			<a class="hover-transparent"  href="{{ path('rent', {id : room.id}) }}">
				<div class="row my-5 rounded">
					<div class="col-6 d-flex flex-column align-items-center justify-content-center">
						<h1>{{ room.titre }}</h1>
						<p>{{ room.descriptionCourte|striptags }}</p>
					</div>
					<div class="col-6">
						<img src="{{ asset("assets/img/chambres/" ~ room.photo) }}" alt="" class="img-fluid" style="width:500px;height:300px">
					</div>
				</div>
			</a>
		{% endfor %}
	</div>
{% endblock %}
