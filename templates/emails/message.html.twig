{% block body_html %}
	<style>
		body {
			font-family: Arial, sans-serif;
			background-color: #f5f5f5;
			padding: 20px;
		}

		.container {
			max-width: 600px;
			margin: 0 auto;
			background-color: #fff;
			border-radius: 5px;
			padding: 20px;
			box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
		}

		h2 {
			color: #333;
			font-size: 24px;
			margin-bottom: 20px;
		}

		p {
			color: #333;
			margin-bottom: 10px;
		}

		strong {
			font-weight: bold;
		}
	</style>

	<div class="container">
		<h2>Nouveau message reçu</h2>
		<p>
			<strong>Nom :</strong>
			{{ nom }}</p>
		<p>
			<strong>Prénom :</strong>
			{{ prenom }}</p>
		<p>
			<strong>Email :</strong>
			{{ recipient_email }}</p>
		<p>
			<strong>Sujet :</strong>
			{{ sujet }}</p>
		<p>
			<strong>Catégorie :</strong>
			{{ categorie }}</p>
		<p>
			<strong>Message :</strong>
		</p>
		<p>{{ message }}</p>
	</div>
{% endblock %}
